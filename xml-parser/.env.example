# ===========================================
# ProWidget XML Parser - Environment Config
# ===========================================

# Database (same as backend)
DATABASE_URL="postgresql://username:password@localhost:5432/prowidget?schema=public"

# Sync Configuration
SYNC_CRON_SCHEDULE="*/15 * * * *"
SYNC_TIMEOUT_MS=30000
SYNC_RETRY_COUNT=3
SYNC_RETRY_DELAY_MS=5000

# Concurrency
MAX_CONCURRENT_SYNCS=5

# Logging
LOG_LEVEL=info
LOG_FILE=logs/xml-parser.log

# HTTP Client
HTTP_TIMEOUT_MS=30000
HTTP_MAX_REDIRECTS=5
HTTP_USER_AGENT="ProWidget-FeedParser/1.0"
