# ================================
# ProWidget PostgreSQL Dockerfile
# ================================

FROM postgres:15-alpine

# Set environment variables
ENV POSTGRES_USER=pwx_user
ENV POSTGRES_PASSWORD=pwx_password
ENV POSTGRES_DB=prowidget

# Copy init script if exists
COPY scripts/init-db.sql /docker-entrypoint-initdb.d/init.sql

# Expose port
EXPOSE 5432

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD pg_isready -U $POSTGRES_USER -d $POSTGRES_DB || exit 1
